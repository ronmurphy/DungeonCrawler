    "examples": [
      ":bounce: :fast: This text bounces quickly!",
      ":glow: :slow: This text glows slowly",
      ":crit: :once: CRITICAL HIT!",
      ":sparkle: :loop: ✨ Endless magic ✨",
      ":throb: :delay: This text waits then pulses",
